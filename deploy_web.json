{
  "name": "Deploy Web",
  "description": "Deploys a server, php interpreter, and content",
  "version": "0.0.1",
  "contact": "Greg Buehler <gregory.r.buehler@gmail.com>",

  "actions": [
    {
      "description": "ensure web server is present",
      "module": "package",
      "options": {
        "state": "present",
        "packages": [
          "apache2"
        ]
      }
    },
    {
      "description": "ensure php is present",
      "module": "package",
      "options": {
        "state": "present",
        "packages": [
          "php5",
          "libapache2-mod-php5"
        ]
      }
    },
    {
      "description": "ensure web server is enabled",
      "module": "service",
      "options": {
        "state": "enable",
        "name": "apache2"
      }
    },
    {
      "description": "ensure web server is started",
      "module": "service",
      "options": {
        "state": "start",
        "name": "apache2"
      }
    },
    {
      "description": "ensure user is created",
      "module": "user",
      "options": {
        "state": "present",
        "name": "qwerty"
      }
    },
    {
      "description": "ensure content is current",
      "module": "file",
      "options": {
        "group": "foo",
        "user": "foo",
        "permissions": "664",
        "files": [
          { "state": "absent", "file": "/var/www/index.html" },
          { "state": "sync", "file": "/var/www/index.php", "source": "index.php" }
        ]
      }
    }
  ]
}
